extends layout


block content
  
  script.
    $(document).ready(function() {
      var socket = io.connect('http://localhost:3000')
      
      socket.on('search tweets', function(data) {
      var html = ''
      for (var i = 0; i < data.length; i++) {
        tweet = data[i]
        html += 'tr \n' +
                'td \n a(href="http://twitter.com/"' + tweet.user + ')= ' + tweet.user + '\n' +
                'td= ' + tweet.text + '\n'
                'td= ' + tweet.date + '\n'
                'td= ' + tweet.time + '\n'
                'td \n a(href="http://twitter.com/statuses/"' + tweet.tweet_id + ') Link \n'  
      }
      $('tweet-table').html(html)
      })
    });
    
  
  
  body
    h1= title
    .container
      form.form-inline(role='form', action='/', method='POST')
        select.form-control(name="playerSelect", id="playerSelect")
          option(value='text') Text
          option(value='account') Account   
          option(value='hashtag') Hashtag
        label.form-label(for'player_name') Player

        input.form-input(type='text', name='player_input', id='player_name' placeholder='Search Term')
        
        label.form-label(for='team_name') Team
        input.form-input(type='text', name='team_input', id='team_name' placeholder='Search Term')
        button.btn.btn-success(type='submit') Search 

        .radio-form
          form.radio-inline
            label.radio-inline 
              input(type='radio', name='optradio', value='query_all') 
              Query Online
            label.radio-inline 
              input(type='radio', name='optradio', value='query_db') 
              Query Database Only
    

    table.table 
      thread
        tr 
          th User
          th Text
          th Date
          th Time
          th Link
      tbody(id="tweet-table")
        each tweet in tweets
          tr 
            td
              a(href="http://twitter.com/"+tweet.user)= tweet.user
            td= tweet.text
            td= tweet.date
            td= tweet.time
            td
              a(href="http://twitter.com/statuses/" + tweet.tweet_id) Link


